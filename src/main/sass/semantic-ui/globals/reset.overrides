.dp-greyscale-950 { color:  #323636; }
.dp-greyscale-900 { color: #3a3c3d; }
.dp-greyscale-850 { color: #4c4f50; }
.dp-greyscale-800 { color: #535657; }
.dp-greyscale-750 { color: #646869; }
.dp-greyscale-700 { color: #707576; }
.dp-greyscale-650 { color: #747a7b; }
.dp-greyscale-600 { color: #7f8383; }
.dp-greyscale-550 { color: #878d8f; }
.dp-greyscale-500 { color: #8c9295; }
.dp-greyscale-450 { color: #aab0b1; }
.dp-greyscale-400 { color: #c0c4c4; }
.dp-greyscale-350 { color: #cacece; }
