{
  "name": "deskpro-app-trello",
  "version": "0.2.7-beta.2",
  "description": "This application adds a sidebar that lets you link tickets to trello cards",
  "main": "lib/main/javascript/index.js",
  "scripts": {
    "dev": "dpat server .",
    "package": "dpat clean . && dpat compile . && dpat bundle-installer . && dpat verify ./dist && dpat package .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "version": "version-changelog CHANGELOG.md && changelog-verify CHANGELOG.md && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DeskproApps/trello.git"
  },
  "keywords": [
    "deskpro",
    "deskpro apps"
  ],
  "author": {
    "name": "DeskPRO Ltd.",
    "email": "apps@deskpro.com",
    "url": "https://deskpro.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DeskproApps/trello/issues"
  },
  "homepage": "https://github.com/DeskproApps/trello#readme",
  "dependencies": {},
  "devDependencies": {
    "@deskpro/apps-dpat": "^0.9.6",
    "@deskpro/apps-sdk-react": "0.2.4",
    "@deskpro/react-components": "1.2.4",
    "error-wrapper": "2.1.0",
    "react": "15.5.3",
    "react-dom": "15.5.3",
    "react-redux": "5.0.6",
    "redux": "3.7.2",
    "redux-form": "^7.2.0",
    "superagent": "3.5.2",
    "superagent-promise": "1.1.0"
  },
  "deskpro": {
    "version": "2.3.0",
    "title": "Trello",
    "isSingle": true,
    "scope": "agent",
    "storage": [
      {
        "name": "install",
        "isBackendOnly": false,
        "permRead": "EVERYBODY",
        "permWrite": "OWNER"
      },
      {
        "name": "auth",
        "isBackendOnly": false,
        "permRead": "OWNER",
        "permWrite": "OWNER"
      },
      {
        "name": "cards",
        "isBackendOnly": false,
        "permRead": "EVERYBODY",
        "permWrite": "EVERYBODY"
      }
    ],
    "targets": [
      {
        "target": "ticket-sidebar",
        "url": "html/ticket-sidebar.html"
      }
    ],
    "settings": [],
    "customFields": [
      {
        "type": "dataList",
        "attachedTo": "ticket",
        "alias": "trelloCards",
        "title": "Trello linked cards"
      }
    ],
    "deskproApiTags": [
      "tickets.*"
    ],
    "externalApis": []
  },
  "optionalDependencies": {
    "changelog-verify": "1.0.4",
    "version-changelog": "2.1.0"
  }
}
