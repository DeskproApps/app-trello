{
  "version": "2.0.0",
  "appVersion": "0.1.0",
  "name": "deskproapps-trello",
  "title": "Trello",
  "description": "This application adds a sidebar that lets you link tickets to trello cards",
  "author": {
    "name" : "Deskproapps",
    "email": "apps@deskpro.com",
    "url": "https://www.deskpro.com"
  },
  "is_single": true,
  "scope": "agent",
  "targets": [
    { "target": "ticket-sidebar", "url": "html/ticket-sidebar.html" }
  ],
  "settings": [
    {
      "name": "my_setting",
      "type": "text/textarea/select/hidden",
      "default_value": "foo",

      "is_private": false,

      "options": [
        {"name": "example_option", "value": "foo"}
      ]
    }
  ],
  "deskpro_api_tags": ["tickets.*"],
  "external_apis": [
    "https://my-domain.com/*",
    "/^https?://w+.deskpro.com/.*?$",
    "https://${settings.my_domain_name}.com/*"
  ]
}
